<h1>New Item Form</h1>

<%= form_with(local: true) do |form| %>
    <% if @item.errors.any? %>
        <ul>
            <% @item.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>

    <div class="field">
        <%= form.label :key %>
        <%= form.text_field :key %>
    </div>
    <div class="field">
        <%= form.label :value %>
        <%= form.text_field :value %>
    </div>
    <div class="actions">
        <%= form.submit 'Add' %>
    </div>

<% end %>
<%= link_to 'Back', '/items' %>
